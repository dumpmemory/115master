{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".output/**", ".next/**"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "lint": {
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "lint:fix": {
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["**/*.{ts,tsx,vue,js,json}"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
